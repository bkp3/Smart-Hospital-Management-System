<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Patient.PatientHomeActivity">

    <TextView
        android:id="@+id/display_name_patient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Welcome "
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/holo_red_dark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/display_name_patient"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/new_appointment_patient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Appointment"
            android:textSize="25dp"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/view_appointment_patient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View/Edit Appointment"
            android:textSize="25dp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/view_prescription_patient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Prescription"
            android:textSize="25dp"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold"
            android:gravity="center"/>
        <TextView
            android:id="@+id/view_bill_patient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Bill"
            android:textSize="25dp"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold"
            android:gravity="center"/>
        <TextView
            android:id="@+id/view_profile_patient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View/Edit Profile"
            android:textSize="25dp"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold"
            android:gravity="center"/>



    </LinearLayout>

    <Button
        android:id="@+id/logout_patient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Logout"
        android:textSize="20dp"
        android:background="@android:color/holo_orange_light"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        />


</RelativeLayout>