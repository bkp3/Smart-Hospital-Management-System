<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.ManageReceptionist.AdminAddReceptionistActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Receptionist"
        android:textSize="25dp"
        android:gravity="center"
        android:textColor="@android:color/holo_red_dark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="5dp">

        <EditText
            android:id="@+id/add_receptionist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:textSize="20dp"
            android:layout_marginTop="7dp"
            />
        <EditText
            android:id="@+id/add_receptionist_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile no"
            android:textSize="20dp"
            android:layout_marginTop="7dp"
            />
        <EditText
            android:id="@+id/add_receptionist_qualification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Qualification"
            android:textSize="20dp"
            android:layout_marginTop="7dp"
            />
        <EditText
            android:id="@+id/add_receptionist_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email id"
            android:textSize="20dp"
            android:layout_marginTop="7dp"
            />
        <EditText
            android:id="@+id/add_receptionist_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textSize="20dp"
            android:layout_marginTop="7dp"
            />
        <EditText
            android:id="@+id/add_receptionist_hospital_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hospital Address"
            android:textSize="20dp"
            android:layout_marginTop="7dp"
            />
        <Button
            android:id="@+id/add_receptionist_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Receptionist"
            android:textAllCaps="false"
            android:textSize="25dp"
            android:layout_marginTop="47dp"
            android:background="@android:color/holo_blue_dark"/>

    </LinearLayout>



</RelativeLayout>